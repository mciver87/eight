/**
 * Implements hook_bean_types().
 */
function nc_table_of_contents_bean_types() {
  $plugins = array();
  $plugin_path = drupal_get_path('module', 'nc_table_of_contents') . '/plugins';
  $plugins['nc_table_of_contents'] = array(
    'label' => t('Table of Contents'),
    'description' => t('Allows a user to add a set of links that are generated by ids on heading tags in a content area. Can be nested in tabs/accordions as well.'),
    'handler' => array(
      'class' => 'NCTableOfContentsBean',
      'parent' => 'bean',
    ),
    'path' => $plugin_path,
    'file' => 'NCTableOfContentsBean.class.php',
  );
  return $plugins;
}

